// Prim Algorithm
void prim(){
  T = Ø;
  W = Ø;
  E로부터 최소 비용인 간선 {v,w}를 선택;
  while (T는 n-1개 이하의 간선을 포함 && E는 공집합이 아님){
    E에서 간선 {v,w}를 제거;
    if ({v,w}가 T 내에서 사이클을 생성 안함){
      T = T ∪ {{v,w}}; //선택한 간선 추가
      W = W ∪ {{v,w}}; //선택한 정점 추가
    }
    else 간선 {v,w}를 버림;
    E로부터 W내의 정점과 최소 비용으로 연결된 간선 {v,w}를 선택;
  }
} 
  
